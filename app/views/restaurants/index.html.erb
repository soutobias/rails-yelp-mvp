<h1>RESTAURANTS</h1>
<div class="container m-3 text-center align-middle">
  <div class="row">
      <% @restaurants.each do |restaurant| %>
        <div class="col-4">
          <div class='card' style="width: 18rem;">
            <div class="card-body">
              <h2 class='card-title'><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
              <h3 class='card-subtitle mb-2 text-muted'><%= restaurant.category %></h3>
              <p class='card-text'><%= restaurant.address %></p>
              <p class='card-text'><%= restaurant.phone_number %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
